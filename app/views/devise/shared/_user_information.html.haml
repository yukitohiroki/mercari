= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"



  .field
    = f.label :nickname
    %br/
    = f.email_field :nickname, autofocus: true, autocomplete: "email"

    .field
    = f.label :family_name
    %br/
    = f.text_field :family_name, autofocus: true

    .field
    = f.label :given_name
    %br/
    = f.text_field :given_name, autofocus: true

    .field
    = f.label :family_name_kana
    %br/
    = f.text_field :family_name_kana, autofocus: true

    .field
    = f.label :given_name_kana
    %br/
    = f.text_field :given_name_kana, autofocus: true

    .field
    = f.label :birthday
    %br/
    = f.date_field :birthday, autofocus: true, autocomplete: "date"




  .actions
    = f.submit "Sign up"
= render "devise/shared/links"

